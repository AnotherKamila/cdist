. cdist-config
if [ $# -lt 3 ]; then
   __cdist_usage "<target host> <remote srcdir> <remote dstdir> [explorer args]"
fi
set -ue

__cdist_target_host="$1"; shift

ssh "${__cdist_remote_user}@${__cdist_target_host}"   \
      "${__cdist_remote_helper_dir}/cdist-explorer-remote-run" "$@"
