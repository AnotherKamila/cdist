# Coordinate run of explorers on target (this script runs on the target)
#

. cdist-config

[ $# -eq 2 ] || __cdist_usage "<explorer dir> <result dir>"

set -e

explorer_dir="$1"; shift
result_dir="$1"; shift

cd "${explorer_dir}"
for explorer in *; do
   "./$explorer" > "${result_dir}/${explorer}"
done
