. cdist-config

find "${CDIST_LIBDIR}" -type f -name cdist_explore\*.sh > "${CDIST_TMP}"

while read funcfull; do
   sh="${funcfull##*/}"
   func="${sh%.sh}"
   var="__$func"
   funclist="$func $funclist"

   # Correct working block for local execution
   #eval $var=\"\$\($func\)\"
   #eval echo $var=\\\"\$$var\\\"

   cat "${funcfull}"
   echo "$func"
   
done < "${CDIST_TMP}"
